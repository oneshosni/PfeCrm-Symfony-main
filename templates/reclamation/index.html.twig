{% extends "admin/bars.html.twig" %}

{% block title %}Reclamation index{% endblock %}

{% block contenpage %}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h5>
                {{ "backend.user.reclamations"|trans }}
            </h5>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    {% if is_granted("ROLE_SUPERUSER") == false %}
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a href="{{ path('app_reclamation_new') }}" class="btn btn-success">NEW</a>
                        </li>
                    </ul>
                    {% endif %}
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <table id="example" class="display table table-striped table-bordered dataminetables">
                            <thead>
                            <th>{{ "backend.user.id"|trans }}</th>
                            <th>{{ "backend.user.Titre"|trans }}</th>
                            <th>{{ "backend.user.Type"|trans }}</th>
                            <th>{{ "backend.user.Content"|trans }}</th>
                            <th>{{ "backend.user.blobImage"|trans }}</th>
                            <th>{{ "backend.user.createdAt"|trans }}</th>
                            {% if is_granted("ROLE_SUPERUSER") == false %}
                            <th>{{ "backend.user.modifier"|trans }}</th>
                            {% endif %}
                            <th>{{ "backend.user.delete"|trans }}</th>
                            <th>{{ "backend.user.show"|trans }}</th>
                            </thead>
                            <tbody>
                            {% for reclamation in reclamations %}
                                <tr>
                                <td>{{ reclamation.id }}</td>
                                    <td>{{ reclamation.Titre }}</td>
                                    <td>{{ reclamation.Type }}</td>
                                    <td>{{ reclamation.Content }}</td>
                                    <td>{{ reclamation.blobImage }}</td>
                                    <td>{{ reclamation.deleted ? 'Yes' : 'No' }}</td>
                                    {% if is_granted("ROLE_SUPERUSER") == false %}
                                    <td>
                                        <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}"><i class="fa fa-edit"></i></a>
                                    </td>
                                    {%  endif %}
                                    <td>
                                        <a href="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}"><i class="fa fa-trash"></i></a>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}"><i class="fa fa-book"></i></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
