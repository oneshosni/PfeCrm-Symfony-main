{% extends "admin/bars.html.twig" %}

{% block title %}Produit{% endblock %}

{% block contenpage %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
        {% if is_granted("ROLE_SUPERUSER") %}
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
        {% endif %}
            <tr>
                <th>Name</th>
                <td>{{ produit.Name }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(imagepath ~ produit.Image ) }} " width='300px' height='250px' /></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}">back to list</a>
    {% if is_granted("ROLE_SUPERUSER") %}
    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
